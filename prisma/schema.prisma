generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id          String        @id @default(cuid())
  name        String
  group       String
  plans       MonthlyPlan[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model MonthlyPlan {
  id          String   @id @default(cuid())
  month       String
  store       Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  storeId     String
  gsm         Int      @default(0)
  gadgets     Int      @default(0)
  digital     Int      @default(0)
  orders      Int      @default(0)
  household   Int      @default(0)
  tech        Int      @default(0)
  photo       Int      @default(0)
  sp          Int      @default(0)
  service     Int      @default(0)
  smart       Int      @default(0)
  sim         Int      @default(0)
  skill       Int      @default(0)
  click       Int      @default(0)
  vp          Int      @default(0)
  nayavu      Int      @default(0)
  spice       Int      @default(0)
  auto        Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([storeId, month])
}
